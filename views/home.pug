extends layout

block content
    script.
        var navbarEl = document.getElementById("home");
        navbarEl.classList.add("active");
    div(class="row")
        div(class="col-sm-12")
            h2 Welcome, #{username}!
            br
    div(class="row")
        div(class="col-sm-12")
            div(class="col-sm-4 homegrid" onclick="window.location.href='/resumebuilder'")
                div(class="homegrid-inner")
                    div(align="center")
                        div(style="font-size:2em;")
                            i(class="far fa-file-alt")
                        h4 Resume Builder
            div(class="col-sm-4 homegrid" onclick="window.location.href='/interests'")
                div(class="homegrid-inner")
                    div(align="center")
                        div(style="font-size:2em;")
                            i(class="far fa-thumbs-up")
                        h4 Interests & Resources
            div(class="col-sm-4 homegrid" onclick="window.location.href='/apptracker'")
                div(align="center")
                    div(style="font-size:2em;")
                        i(class="far fa-check-circle")
                    h4 Application Tracker
    br
    br
    br
    div(class="row")
        div(class="col-sm-2 progress-text")
            h4 Elementary
        div(class="col-sm-2 progress-text")
            h4 Junior High
        div(class="col-sm-2 progress-text")
            h4 Grade 9
        div(class="col-sm-2 progress-text")
            h4 Grade 10        
        div(class="col-sm-2 progress-text")
            h4 Grade 11
        div(class="col-sm-2 progress-text")
            h4 Grade 12
    div(class="progress")
        div(id="gradeProgress" class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow=grade aria-valuemin="0" aria-valuemax="100" style="width:"+grade+"%")
 
