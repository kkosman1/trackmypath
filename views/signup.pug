extends layout

block content
    div(align="center")
        h1 Sign Up
        div(class="signup")
            form(class="form-horizontal")
                div(class="form-group")
                    div(class="col-sm-3" align="right")
                        label(class="control-label" for="firstname") First Name
                    div(class="col-sm-9")
                        input(type="text" class="form-control" id="firstname")
                div(class="form-group")
                    div(class="col-sm-3" align="right")
                        label(class="control-label" for="lastname") Last Name
                    div(class="col-sm-9")
                        input(type="text" class="form-control" id="lastname")
                div(class="form-group")
                    div(class="col-sm-3" align="right")
                        label(class="control-label" for="grade") Grade
                    div(class="col-sm-9")
                        input(type="text" class="form-control" id="grade")
                div(class="form-group")
                    div(class="col-sm-3" align="right")
                        label(class="control-label" for="email") Email
                    div(class="col-sm-9")
                        input(type="email" class="form-control" id="email")
                div(class="form-group")
                    div(class="col-sm-3" align="right")                    
                        label(class="control-label" for="password") Password
                    div(class="col-sm-9")
                        input(type="text" class="form-control" id="password")
                br
                div(class="row")
                    div(style="float:left; padding-left:15px;")
                        button(type="button" onclick="window.location.href='/login'" class="btn btn-default") < Back
                    div(style="float:right; padding-right:15px;")
                        button(type="submit" class="btn btn-default") Submit >
            