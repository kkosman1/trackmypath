extends layout

block content

    
    div(class="col-sm-1" align="left")
        button(type="submit" onclick="window.location.href='/home'" class="btn btn-default signout") < Back
    div(class="col-sm-12")
        div(class="col-sm-1")
        div(class="col-sm-3")
            div(class='appgrid')
                div(class='appgridheader')
                    div(class="row")
                        div(class="col-sm-8")
                            div(class='appgridheadertext')                           
                                h4 TO DO
                        div(class="col-sm-4")
                            i(class="far fa-plus")
                ul(id='todolist' class='appgridlist')
                    li(class='appgriditem')
                        div(align="left" style="color: rgb(151, 146, 146);")
                            h4 write common app essay
        div(class="col-sm-3")
            div(class='appgrid')
                div(class='appgridheader')
                    div(class='appgridheadertext')
                        h4 IN PROGRESS
                ul(id='inprogresslist' class='appgridlist')
        div(class="col-sm-3")
            div(class='appgrid')
                div(class='appgridheader')
                    div(class='appgridheadertext')
                        h4 COMPLETED
                ul(id='completedlist' class='appgridlist')
        div(class="col-sm-1")

        script. 
            $("#todolist").sortable({connectWith: ".appgridlist"});
            $("#inprogresslist").sortable({connectWith: ".appgridlist"});
            $("#completedlist").sortable({connectWith: ".appgridlist"});

